queryresults
queryurl varchar(200)     primary key 
filteredresult  varchar (200) primary_key
sentbymail boolean 

CREATE TABLE queryresults (queryurl text  , queryresult  text, sentbyemail integer , primary key (queryurl,queryresult) );




